<% if current_user.star?(user) %>
  <%= link_to unstar_path(starred_id: user.id), remote: true, method: :delete  do %>
  
    <!-- star color is gold -->
    <i style="color: #FFD700;" class='fa fa-star'></i>

  <% end %>
<% else %>
  <%= link_to star_path(starred_id: user.id), remote: true, method: :post do %>
    <i style="color:grey" class='fa fa-star'></i>

  <% end %>
<% end %>
