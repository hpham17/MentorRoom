
<div class="container">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>EMAIL</th>
      <th>Name</th>
    </tr>

    <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.email %></td>
      <td><%= u.name %> <% if u.current_sign_in_at != nil %><i style="color:green" class="fa fa-circle" aria-hidden="true"></i></td>
        <% end %>


        <% if current_user.mentors.include? u %>
          <td><%= link_to "Message", 'chatrooms/new?id=' + u.id.to_s %></td>
        <% elsif !current_user.requested_mentor?(u).empty? %>
          <td> Request Sent </td>
        <% elsif u.check_limit != "block" %>
          <td><a class="item2" href="<%= u.id %>">Request Mentor</a></td>
        <% else %>
          <td>  Mentee Limit Reached! Try again next week.</td>
        <% end %>

    </tr>
    <% end %>

  </table>
  <%= instant_hangout widget_size: 175  %>
  <!-- MODAL ABOUTME -->
  <div class="container">
  <div class="modal fade mymodal" id="modal-2" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"> <i class='fa fa-times'></i> </button>


          <h4 class="modal-title" id="myModalLabel">Request a Mentor</h4>
        </div>
        <div class="modal-body">
          <%= form_for @mentorship do |m| %>
            Include a personal note:<br>
            <div style="width: 100%">
              <%= hidden_field_tag(:user_id, current_user.id) %>
              <%= hidden_field_tag(:mentor_id) %>
              <%= text_area_tag(:body, "Hi, I would like to be your mentee.", size: "24x6") %><br>
            <%= m.submit "Request Mentor" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="minmaxCon"></div>
  <!-- END MODEL ABOUTME -->
</div>



<script>
id = 0;
$(document).ready(function(){
  $('.item2').click(function(e){
    elem = $( this );
    e.preventDefault();
    id = elem.attr("href")
    $('#mentor_id').val(id)
    $('#modal-2').modal({backdrop: false, keyboard: false});
  });
});
</script>
