<div class="container">
  <h1>Hello, Mentor!</h1>
  <div class="row mr-font">
  <div class="col s6 l3">
    <div class="mr-color card medium">
        <div class="card-content white-text">
            <p class="card-stats-title "><i class="mdi-social-group-add"></i> Current Mentees</p>
            <h4 class="card-stats-number"><%= current_user.mentees.count %></h4>

        </div>

    </div>
  </div>
    <div class="col s6 l3">
      <div class="card medium">
          <div class="card-content black-text">
              <p class="card-stats-title"><i class="mdi-social-group-add"></i> Friend Requests</p>
              <% current_user.requests.each do |r| %>
                <div>
                  <h4 class="card-stats-number"><%= link_to r.name, user_path(r.id) %></h4>
                  <%= button_to "Accept", accept_request_path(r.id), class: 'accept_request', :id => r.id %>
                </div>
              <% end %>

          </div>

      </div>
  </div>
  <div class="col s6 l3">
    <div class="card medium blue-grey">
        <div class="card-content  white-text">
            <p class="card-stats-title"><i class="mdi-social-group-add"></i> Flash Session Requests</p>
            <h4 class="card-stats-number">20</h4>

        </div>

    </div>
</div>
<div class="col s12 m6 l3">
  <div class="card medium ">
      <div class="card-content black-text">
          <p class="card-stats-title"><i class="mdi-social-group-add"></i> Activity Feed</p>
          <br>
          <div>
          <ul>
            <li style="list-style-type: circle;">You completed a Flash Session with Hubert Pham<br> 12-26-16</li>
            <li style="list-style-type: circle;">You completed a Flash Session with Whiskey Pham</li>
          </ul>

      </div>

  </div>
</div>
</div>


  <table class="table">

    <% @mentees.each do |m| %>
    <tr>
      <td><%= m[0].name %></td>
      <td><%= m[0].email %></td>
      <td><%= m[0].role %> <%= link_to "Accept Mentee", mentorship_path(id: m[1]), method: :patch %></td>

    </tr>
    <% end %>
  </table>
