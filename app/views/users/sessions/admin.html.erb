<div class="container">
  <h1>Hello, Admin!</h1>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>EMAIL</th>
      <th>ROLE</th>
      <th>NAME</th>
    </tr>

    <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td><%= u.name %> <% if u.current_sign_in_at != nil %><i style="color:green" class="fa fa-circle" aria-hidden="true"></i></td>
        <% end %>
    </tr>
    <% end %>
  </table>
