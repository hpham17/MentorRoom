  <% if current_user.isFriend?(user) || user == current_user %>
    <div id="calendar-tab" class="col s12">
      <div class="row">
        <div class="col s12 m7">
          <div id="calendar"></div>
        </div>
        <% if user == current_user %>
          <div class="col s12 m3">
            <h3>When are you available?</h3>
            <%= form_for @event do |e| %>
            <%= e.label :title %>
            <%= e.text_field :title, :value => 'Available' %>

            <div class='col-sm-12'>
                <div class="form-group">
                  <div class='input-group date'>
                  <label>From</label>
                  <%= e.datetime_select :start %>
                </div>
                </div>
            </div>

            <div class='col-sm-12'>
                <div class="form-group">
                  <div class='input-group date'>
                  <label>To</label>
                  <%= e.datetime_select :end %>
                </div>
                </div>
            </div>
            <%= e.submit %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
<% end %>

