<ul>
  <% if user_signed_in? %>
    <!-- <li><%= link_to "FlashSession", flash_sessions_path, method: :get %></li> -->
    <% if current_user.picture %><li class="grey darken-3 center"><%= link_to image_tag("/uploads/#{current_user.picture}", class:'img-icon circle'), user_path(current_user), class: 'icon-container center' %></li><% end %>
    <% if current_user.is? :Mentee %>
      <li><%= link_to "Mentors", users_path, method: :get %></li>
    <% elsif current_user.is? :Mentor %>
      <li><%= link_to "Mentees", users_path, method: :get %></li>
    <% end %>
      <li style="position:relative;"><%= link_to "Messages", chatrooms_path %>
        <% if new_messages? %>
          <span class="button_badge"><%= new_messages? %></span>
        <% end %>
      </li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      <li><%= link_to("Settings", edit_user_registration_path) %></li>


  <% else %>
    <li><a class="page-scroll" href="#download">Download</a></li>
    <li><a class="page-scroll" href="#features">Features</a></li>
    <li><a class="page-scroll" href="#contact">Contact</a></li>
    <li><%= link_to('Login', new_user_session_path)  %></li>
    <li><%= link_to('Register', new_user_registration_path)  %></li>
  <% end %>
</ul>
